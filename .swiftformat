# Minimum swiftformat version
--minversion 0.52.0

# Swift version
--swiftversion 5.7

# file options
--exclude .build

# rules
--disable redundantReturn, extensionAccessControl

# format options
--ifdef no-indent
--nospaceoperators ...,..<
--patternlet inline
--self insert
--stripunusedargs unnamed-only

#--maxwidth 150
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first

#file header
#--header "//===----------------------------------------------------------------------===//\n//\n// This source file is part of the MQTTNIO project\n//\n// Copyright (c) 2020-{year} Adam Fowler\n// Licensed under Apache License v2.0\n//\n// See LICENSE.txt for license information\n//\n// SPDX-License-Identifier: Apache-2.0\n//\n//===----------------------------------------------------------------------===//"
